rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Games — anyone can read active games; only admin can write
    match /games/{gameId} {
      allow read: if resource.data.active == true;
      allow write: if request.auth != null && request.auth.token.email == 'admin@merlinpredictions.com';
    }

    // Users — each user can read/write their own doc
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // VIP codes — authenticated users can read (to redeem); only admin can create
    match /vip_codes/{code} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.token.email == 'admin@merlinpredictions.com';
      allow update: if request.auth != null
        && resource.data.used == false
        && request.resource.data.used == true
        && request.resource.data.usedBy == request.auth.uid;
    }
  }
}
